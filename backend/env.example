# Node.js runtime environment
NODE_ENV=development

# Express server port
PORT=4000

# MongoDB connection string (Local or Atlas)
MONGODB_URI=mongodb://127.0.0.1:27017/may-coffee

# URL that the backend allows for CORS and cookies
FRONTEND_URL=http://localhost:3000
# Optional legacy alias - keep in sync with FRONTEND_URL if used
# CLIENT_BASE_URL=http://localhost:3000

# JWT settings
JWT_ACCESS_SECRET=replace-with-secure-random-string
JWT_ACCESS_EXPIRES_IN=2h
SESSION_COOKIE_NAME=maycoffee_session

# SendGrid (optional for local dev)
SENDGRID_API_KEY=
SENDGRID_FROM_EMAIL=no-reply@maycoffee.store

# Email logo URL (defaults to FRONTEND_URL/logo.png if not set)
# EMAIL_LOGO_URL=http://localhost:3000/logo.png



